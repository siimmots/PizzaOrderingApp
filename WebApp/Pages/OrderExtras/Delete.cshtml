@page
@model WebApp.Pages.OrderExtras.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>OrderExtra</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderExtra.Order)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderExtra.Order!.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderExtra.Topping)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderExtra.Topping!.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="OrderExtra.Id" />
        <input type="hidden" name="orderId" asp-for="OrderId" />
        <input type="hidden" name="clientId" asp-for="ClientId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @if (@Model.OrderId != 0)
        {
            <a asp-page="/Orders/Create" asp-route-clientId="@Model.ClientId" asp-route-orderId="@(@Model.OrderId)">Back to the Order</a>
        }
        else
        {
            <a asp-page="./Index">Back to List</a>
        }
        
    </form>
</div>
