@page
@model WebApp.Pages.OrderExtras.CreateModel

@{
    ViewData["Title"] = "Add a topping";
}

<h1>Add a topping</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <h3 class="col-sm-10">@Model.Order!.Pizza!.Name</h3>
        <form method="post">
            <div class="form-group">
                <label asp-for="OrderExtra.ToppingId" class="control-label">Extra topping</label>
                <select asp-for="OrderExtra.ToppingId" class="form-control" asp-items="Model.Toppings"></select>
            </div>
            <div class="form-group">
                <input type="hidden" name="clientId" asp-for="ClientId"/>
                <input type="hidden" name="orderId" asp-for="OrderId"/>
                <input type="hidden" name="pizzaId" asp-for="PizzaId"/>
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
