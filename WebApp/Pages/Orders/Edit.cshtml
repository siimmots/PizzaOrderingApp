@page
@model WebApp.Pages.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.Id" />
            <div class="form-group">
                <label asp-for="Order.Price" class="control-label"></label>
                <input asp-for="Order.Price" class="form-control" />
                <span asp-validation-for="Order.Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Order.IsCompleted" /> @("Completed")
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Order.ClientId" class="control-label">Client</label>
                <select asp-for="Order.ClientId" class="form-control" asp-items="Model.ClientIds"></select>
                <span asp-validation-for="Order.ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.PizzaId" class="control-label">Pizza</label>
                <select asp-for="Order.PizzaId" class="form-control" asp-items="Model.PizzaIds"></select>
                <span asp-validation-for="Order.PizzaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
