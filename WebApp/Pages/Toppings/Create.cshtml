@page
@model WebApp.Pages.Toppings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Topping</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Topping.Name" class="control-label"></label>
                <input asp-for="Topping.Name" class="form-control" />
                <span asp-validation-for="Topping.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topping.Calories" class="control-label">Calories (kcal)</label>
                <input asp-for="Topping.Calories" maxlength="4" type="number" class="form-control" />
                <span asp-validation-for="Topping.Calories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topping.ExtraPrice" class="control-label">Price for extra</label>
                <select asp-for="Topping.ExtraPrice" class ="form-control" asp-items="Model.ToppingPrices"></select>
                <span asp-validation-for="Topping.ExtraPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
